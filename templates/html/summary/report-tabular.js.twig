                        getCol('AC'             , 'afferentCoupling'        , 'average' , 'Afferent coupling'),
                        getCol('noc'            , 'noc'                     , 'sum'     , 'Number of classes'                   , false),
                        getCol('noca'           , 'noca'                    , 'sum'     , 'Numner of abstract classes and interfaces'          , false),
