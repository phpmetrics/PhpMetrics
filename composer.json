{
    "name": "phpmetrics/phpmetrics",
    "replace": {
        "halleck45/phpmetrics": "*",
        "halleck45/php-metrics": "*"
    },
    "description": "Static analyzer tool for PHP : Coupling, Cyclomatic complexity, Maintainability Index, Halstead's metrics... and more !",
    "license": "MIT",
    "keywords": [
        "quality",
        "analysis",
        "testing",
        "qa"
    ],
    "authors": [
        {
            "name": "Jean-François Lépine",
            "email": "lepinejeanfrancois@yahoo.fr",
            "homepage": "http://www.lepine.pro",
            "role": "Copyright Holder"
        }
    ],
    "homepage": "http://www.phpmetrics.org",
    "support": {
        "issues": "https://github.com/PhpMetrics/PhpMetrics/issues"
    },
    "autoload": {"psr-4": {"Hal\\": "src/Hal"}, "files": ["src/functions.php"]},
    "autoload-dev": {"psr-4": {"Tests\\Hal\\": "tests"}, "files": ["src/functions.php"]},
    "require": {
        "php": ">=8.1",
        "ext-dom": "*",
        "ext-tokenizer": "*",
        "ext-yaml": "*",
        "nikic/php-parser": "^4"
    },
    "require-dev": {
        "phake/phake": "^4.2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.5",
        "phpstan/phpstan-strict-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpunit/phpunit": "^9.5",
        "sebastian/comparator": ">=4.0.6",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/dom-crawler": "^6.0",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^4.22"
    },
    "bin": [
        "bin/phpmetrics"
    ],
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    }
}
